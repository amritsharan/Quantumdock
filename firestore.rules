/**
 * @fileoverview Firestore Security Rules for QuantumDock application.
 *
 * WARNING: These rules have been modified to grant broad access.
 * Any authenticated user can read or write to any part of the database.
 * This is not recommended for production environments.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // This rule is necessary to allow the collectionGroup query in the saveDockingResults action.
    // It allows any authenticated user to query across all 'loginHistory' collections.
    match /{path=**}/loginHistory/{historyId} {
      allow get, list: if request.auth != null;
    }

    // Grant read and write access to all documents if the user is authenticated.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
