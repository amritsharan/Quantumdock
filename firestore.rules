
/**
 * @fileoverview Firestore Security Rules for QuantumDock application.
 *
 * These rules enforce a user-ownership model, where users can only read and
 * write to their own data. Any authenticated user can create their own
 * user document.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // A user can read, update or delete their own user document.
    // Any authenticated user can create their own user document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      // A user can create and manage their own login history.
      match /loginHistory/{historyId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // A user can create and read their own docking simulations within a session.
        match /dockingSimulations/{simulationId} {
          allow read, create: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // A user can create and read their own docking results.
      match /dockingResults/{dockingResultId} {
        allow read, create: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
