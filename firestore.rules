/**
 * @fileoverview Firestore Security Rules for QuantumDock application.
 *
 * WARNING: These rules have been modified to grant broad access.
 * Any authenticated user can read or write to any part of the database.
 * This is not recommended for production environments.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Grant read and write access to all documents if the user is authenticated.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
